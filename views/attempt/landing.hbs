<script>
    $(document).ready(function () {
        var quizID = Number(window.location.pathname.split('/quiz/')[1]);
        localStorage.setItem('quizID', quizID);

        function startQuiz() {
            checkUser();
        }
    });

    function checkUser() {
        var user = {};
        user.id = localStorage.getItem('userID');
        user.church = localStorage.getItem('church');
        user.language = localStorage.getItem('language');
        user.email = localStorage.getItem('email');
        user.phone = localStorage.getItem('phone');
        var quizID = Number(localStorage.getItem('quizID'));
        if (user.id && user.language && user.church && (user.email || user.phone)) {
            window.location.href = '/attempt/quiz/' + quizID;
        } else {
            localStorage.clear();
            localStorage.setItem("quizID", Number(quizID));
            window.location.href = '/user/signup';
        }
    }
</script>
<div class="quiz-home-bg">
    <div class="text-center w-100 position-absolute" style="top: 70px;">
        <img onclick="checkUser()" class="cursor-pointer rounded-circle" src="/img/quiz-button.svg" alt="" />
    </div>
</div>